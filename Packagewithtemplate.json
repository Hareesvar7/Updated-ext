{
    "name": "policy-pilot",
    "displayName": "Policy Pilot",
    "description": "A .rego Policy Management Tool for cloud storage services.",
    "version": "0.0.1",
    "publisher": "YourName",
    "engines": {
        "vscode": "^1.56.0"
    },
    "activationEvents": [
        "onCommand:extension.insertTemplate"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.insertTemplate",
                "title": "Insert Storage Template"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./out/src/yourScript.js"
    },
    "devDependencies": {
        "typescript": "^4.4.2",
        "vscode": "^1.56.0"
    }
}
